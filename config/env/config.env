# Server Configuration
PORT=5000                   # Port where the server will run
NODE_ENV=development        # Set to 'development' or 'production'

# MongoDB Connection
# Format: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<dbname>?retryWrites=true&w=majority
MONGO_URI=                  # Your MongoDB connection string

# JWT (JSON Web Token) Configuration
JWT_SECRET_KEY=             # A strong secret key for signing JWT tokens
JWT_EXPIRE=10m              # Token expiration time (e.g., 10m = 10 minutes)

# Cookie Configuration
JWT_COOKIE=10               # Number of days the JWT cookie should last

# Password Reset Token Configuration
RESET_PASSWORD_EXPIRE=3600000   # Expiration time for reset password token (in milliseconds)

# Email (SMTP) Configuration
SMTP_HOST=smtp.gmail.com    # Your SMTP host (e.g., Gmail's SMTP)
SMTP_PORT=587               # SMTP port (587 for TLS)
SMTP_USER=                  # Your email address used to send mails
SMTP_PASS=                  # App password or email service password